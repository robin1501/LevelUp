<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:background="@drawable/iczedwhn">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/uebersicht"
        android:id="@+id/uebersichtTv"
        android:layout_gravity="bottom|top"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:layout_below="@+id/uebersichtTv"
        android:layout_above="@+id/uBisErl">
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bisher_erledigt"
            android:textColor="#FFFFFF"
            android:id="@+id/erledigt"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/zahl"
            android:textColor="#FFFFFF"
            android:id="@+id/erledigtZahl"
            android:layout_below="@id/uProzent"
            android:layout_alignTop="@+id/uLetWor"
            android:layout_alignLeft="@+id/uebersichtTv"
            android:layout_alignStart="@+id/uebersichtTv"
            android:layout_gravity="center_vertical" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/letztes_workout"
            android:textColor="#FFFFFF"
            android:id="@+id/letztes"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum"
            android:textColor="#FFFFFF"
            android:id="@+id/letztesDatum"
            android:layout_below="@id/uProzent"
            android:layout_alignTop="@+id/uLetWor"
            android:layout_alignLeft="@+id/uebersichtTv"
            android:layout_alignStart="@+id/uebersichtTv"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/naechstes_workout"
            android:textColor="#FFFFFF"
            android:id="@+id/nächstes"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum"
            android:textColor="#FFFFFF"
            android:id="@+id/nächstesDatum"
            android:layout_below="@id/uProzent"
            android:layout_alignTop="@+id/uLetWor"
            android:layout_alignLeft="@+id/uebersichtTv"
            android:layout_alignStart="@+id/uebersichtTv"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/bmi"
            android:textColor="#FFFFFF"
            android:id="@+id/bmi"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/zahl"
            android:textColor="#FFFFFF"
            android:id="@+id/bmiZahl"
            android:layout_below="@id/uProzent"
            android:layout_alignTop="@+id/uLetWor"
            android:layout_alignLeft="@+id/uebersichtTv"
            android:layout_alignStart="@+id/uebersichtTv"
            android:layout_gravity="center_vertical" />

    </LinearLayout>







</LinearLayout>