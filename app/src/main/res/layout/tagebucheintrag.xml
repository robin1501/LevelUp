<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@drawable/hintergrund"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDatum"
            android:text="Datum"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/ivBild"
            android:src="@drawable/noimage"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tvDatum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivBild"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/aktGewicht"
                android:id="@+id/tvAktuellesGewicht"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtGewicht"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" kg"
                android:id="@+id/tvKG1"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/schulterumfang"
                android:id="@+id/tvAktSchulterumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtSchulterumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM1"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/armumfang"
                android:id="@+id/tvAktArmumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtArmumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM2"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/brustumfang"
                android:id="@+id/tvAktBrustumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtBrustumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM3"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/bauchumfang"
                android:id="@+id/tvAktBauchumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtBauchumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM4"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout6">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/hueftumfang"
                android:id="@+id/tvAktHueftumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtHueftumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM5"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:weightSum="5"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textColor="#FFFFFF"
                android:text="@string/beinumfang"
                android:id="@+id/tvAktBeinumfang"
                android:textSize="20sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/txtBeinumfang"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="end"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:text=" cm"
                android:id="@+id/tvCM6"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSpeichern"
            android:text="@string/speichern"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape"
            android:layout_below="@id/linearLayout7"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
</ScrollView>